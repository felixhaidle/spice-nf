/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run BIONF/spice_library_pipeline -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
    //publishDir = [
    //    path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
    //    mode: params.publish_dir_mode,
    //    saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    //]

}

process {
    withName: FAS_ANNOTATION {
        cpus = 1
        memory = 6.GB
        //conda = "${projectDir}/environment.yml"
        executor = 'local'
        conda = '/home/felix/miniconda3/envs/spice_env'
    }

}

process {
    withName: GENERATE_LIBRARY {
        cpus = 1
        memory = 6.GB
        //conda = "${projectDir}/environment.yml"
        executor = 'local'
        conda = '/home/felix/miniconda3/envs/spice_env'
    }
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'


    // Input data
    species = 'human'
    release = 113
    anno_tools = '/share/project/felix/spice-nf/FAS_SLURM_EXECUTABLE/FAS/'
    test_mode = false
    outdir = 'test_process_result'
    annotation_gtf = "/share/project/felix/spice-nf/HumanAnnotation/ensembl_113/subset_chr22.gtf"
    peptide_fasta = "/share/project/felix/spice-nf/HumanAnnotation/ensembl_113/subset_chr22.fasta"


}


conda.enabled           = true
